																												<input type="text" class="hide-label" id="usernameInput" name="username" tabindex="1" placeholder="Username">
							
						
						
											</div>
					
											
															<div class="input-group hide-label required">
					
													<label>Password</label>
						
						
														<input type="password" class="hide-label" id="passwordInput" name="password" tabindex="2" placeholder="Password">
							
						
						
											</div>
					
											
															<div class="input-group">
					
						
						
														<a href="#" class="forgot-password" tabindex="0">
	Forgot your password?</a>							
						
						
											</div>
					
											
															<div class="input-group keep-logged-in">
					
						
													<label>
						
														<input type="checkbox" class="keep-logged-in" name="keeploggedin" value="1" tabindex="3">
								
						
													Stay logged in</label>
						
											</div>
					
											
															<div class="input-group login-button">
					
						
						
														<input type="submit" class="login-button" value="Log in" tabindex="4">
							
						
						
											</div>
					
										</fieldset>

	</form>
	<div class="sso-login hidden">
		<div class="sso-login-divider">
			<span>Or</span>
		</div>

					<a href="#" class="wikia-button wikia-button-facebook sso-login-facebook"  data-id="facebook" tabindex="5" ><img alt="" class="sprite facebook" height="14" src="data:image/gif;base64,R0lGODlhAQABAIABAAAAAP///yH5BAEAAAEALAAAAAABAAEAQAICTAEAOw%3D%3D" width="15" /> Connect</a>
	</div>
</div>
	</li>
</ul>
		</div>
					</div>
</nav>
<div class="WikiaTopAds" id="WikiaTopAds">

	<div class="WikiaTopAdsInner">


		<!-- BEGIN SLOTNAME: TOP_LEADERBOARD -->
